    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="@color/white"
    tools:context=".Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/black">


<!--                <ImageButton-->
<!--                    android:id="@+id/my_circular_image_button"-->
<!--                    android:layout_width="25dp"-->
<!--                    android:layout_height="25dp"-->
<!--                    android:src="@drawable/edit"-->
<!--                    android:background="@color/black"-->
<!--                    android:scaleType="fitCenter"-->
<!--                    android:layout_marginLeft="30dp"-->
<!--                    android:layout_marginTop="40dp"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintTop_toTopOf="parent" />-->


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Profile"
                    android:textAlignment="center"
                    android:textColor="@color/dark"
                    android:textSize="25dp"
                    android:translationX="165dp"
                    android:translationY="40dp" />

                <ImageButton
                    android:id="@+id/changeProfileBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="30dp"
                    android:layout_alignParentEnd="true"
                    android:background="@color/black"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tick" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="53dp"
                    android:background="@color/black"
                    android:scaleX="1.23"
                    android:scaleY="0.6"
                    android:translationY="180dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/img"
                    tools:layout_editor_absoluteY="181dp" />

                <ImageView
                    android:id="@+id/profilepic"
                    android:layout_width="105dp"
                    android:layout_height="101dp"
                    android:translationX="150dp"
                    android:translationY="140dp"
                    app:srcCompat="@drawable/profilepic"
                    tools:layout_editor_absoluteX="153dp"
                    tools:layout_editor_absoluteY="142dp"
                    android:background="@color/black"/>

                <ImageButton
                    android:id="@+id/changeProfileImageBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="210dp"
                    android:layout_marginEnd="120dp"
                    android:background="@color/black"
                    android:scaleType="fitCenter"
                    android:src="@drawable/editprof" />


            </RelativeLayout>

            <EditText

                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/usernameET"
                android:text="Username"
                android:textColor="#1D2C61"
                android:textStyle="bold"
                android:textSize="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emailTV"
                android:text="email"
                android:textColor="@color/dark"
                android:textAlignment="center"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="16dp"
                android:layout_height="wrap_content"
                >


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="41dp"
                    android:layout_height="54dp"
                    android:src="@drawable/gender1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:id="@+id/genderET"
                    android:text="Gender"
                    android:textStyle="bold"
                    android:textColor="#1D2C61"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="@+id/imageView"/>


                <ImageView
                    android:id="@+id/arrowImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_forward_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView" />




            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="16dp"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="41dp"
                    android:layout_height="54dp"
                    android:src="@drawable/dob"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:id="@+id/dobET"
                    android:text="Date of Birth"
                    android:textStyle="bold"
                    android:textColor="#1D2C61"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView6"
                    app:layout_constraintTop_toTopOf="@+id/imageView6"/>



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_forward_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView6"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView6" />


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="16dp"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/height"
                    android:layout_width="41dp"
                    android:layout_height="54dp"
                    android:src="@drawable/height1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:id="@+id/heightET"
                    android:text="height"
                    android:textStyle="bold"
                    android:textColor="#1D2C61"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/height"
                    app:layout_constraintTop_toTopOf="@+id/height"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_forward_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/height"
                    app:layout_constraintBottom_toBottomOf="@+id/height" />




            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="16dp"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/weight"
                    android:layout_width="41dp"
                    android:layout_height="54dp"
                    android:src="@drawable/weight"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:id="@+id/weightET"
                    android:text="weight" android:textStyle="bold"
                    android:textColor="#1D2C61"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/weight"
                    app:layout_constraintTop_toTopOf="@+id/weight"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_forward_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/weight"
                    app:layout_constraintBottom_toBottomOf="@+id/weight" />




            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>



